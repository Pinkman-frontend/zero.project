mixinDebug()
  .debug-wrapper
    position fixed
    top 0
    left 0
    width 100%
    height 0
    z-index 1000000
    display none
    .debug-service
      position absolute
      top 0
      right 0
      padding 2rem
      background rgba(#000, 0.5)
      font-size 1.2rem
      a
        color $white
        text-decoration underline
    .is-debug &
      display block
  #debug
    position fixed
    top 0
    left 0
    width 100%
    height 100%

    pointer-events none


    .debug-container
      box-shadow inset -4rem 0 0 -2rem rgba(#00ffff,0.2), inset 4rem 0 0 -2rem rgba(#00ffff,0.2)





    .debug-content
      position absolute
      top 0
      left 2rem
      display grid
      grid-template-columns repeat(12, 1fr)
      grid-auto-rows minmax(100%, auto)
      grid-column-gap 4rem
      width 116rem
      height 100%
      background transparent
      padding 0

      div
        outline 1px solid #00dddd
        margin 0

      @media $mobile
        width calc(100% - 4rem)
        grid-template-columns repeat(6, 1fr)
        grid-auto-rows minmax(100%, auto)
        grid-column-gap 2rem
        div:nth-child(7),
        div:nth-child(8),
        div:nth-child(9),
        div:nth-child(10),
        div:nth-child(11),
        div:nth-child(12)
          display none


  .is-debug-outline
    * { outline: 1px dotted rgba(red, 0.5) }
    * * { outline: 1px dotted rgba(green, 0.5) }
    * * * { outline: 1px dotted rgba(orange, 0.5) }
    * * * * { outline: 1px dotted rgba(blue, 0.5) }
    * * * * * { outline: 1px solid rgba(red, 0.5) }
    * * * * * * { outline: 1px solid rgba(green, 0.5) }
    * * * * * * * { outline: 1px solid rgba(orange, 0.5) }
    * * * * * * * * { outline: 1px solid rgba(blue, 0.5) }
    * * * * * * * * * { outline: 1px solid rgba(aliceblue, 0.5) }
    * * * * * * * * * * { outline: 1px solid rgba(antiquewhite, 0.5) }
    * * * * * * * * * * * { outline: 1px solid rgba(aqua, 0.5) }
    * * * * * * * * * * * * { outline: 1px solid rgba(aquamarine, 0.5) }
    * * * * * * * * * * * * * { outline: 1px solid rgba(blueviolet , 0.5) }
    * * * * * * * * * * * * * * { outline: 1px solid rgba(brown, 0.5) }
    * * * * * * * * * * * * * * * { outline: 1px solid rgba(burlywood, 0.5) }
    * * * * * * * * * * * * * * * * { outline: 1px solid rgba(cadetblue, 0.5) }


  .table-of-contents
    margin 6rem
    .contents-wrapper
      width 100%
      margin-top 2rem

      h2
        font-size 3rem
        margin 3rem 0
      .contents-row
        display grid
        grid-template-columns 4rem 1fr 15rem 10rem
        grid-auto-rows 5rem
        grid-column-gap 0rem
        border-bottom 1px solid #ccc
        border-left 1px solid #ccc
        border-right 1px solid #ccc

        .contents-col
          text-align left
          padding 1rem
          //background rgba(#000, 0.01)
          font-size 2rem
          border-top 1px solid #ccc
        a
          color $blue!important
          text-decoration underline

    .legend
      margin-top 1rem
      .status
        display flex
        justify-content: flex-end
        width 100%
        div
          font-size 1.8rem
          border 1px solid #ccc
          padding 1rem

    .done
      background $green
    .wait
      background $gray_bb
    .wip
      background $orange
    .service-wip
      background $gold
    .service-done
      background $blue



  .ui
    h1
      margin-bottom 5rem
    h2
      margin-top 4rem
      margin-bottom 2rem
      padding-bottom 2rem
      border-bottom 1px solid rgba($black, 0.3)

    h3
      margin 2rem 0 2rem 0rem

    h4
      margin 2rem 0 2rem 0rem

    .descr
      font-size 1.4rem
      color $gray
      padding 1rem 0 2rem
      p
        font-size 1.2rem
      p + p
        margin-top 0.5rem
mixinDebug()
